{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"],
    "paths": {
      "@public/*": ["public/*"],
      "@public": ["src/public"],
      "@assets/*": ["src/assets/*"],
      "@assets": ["src/assets"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@constants/*": ["src/constants/*"],
      "@constants": ["src/constants"],
      "@contexts/*": ["src/contexts/*"],
      "@contexts": ["src/contexts"],
      "@hocs/*": ["src/hocs/*"],
      "@hocs": ["src/hocs"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@models/*": ["src/models/*"],
      "@models": ["src/models"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages"],
      "@routes/*": ["src/routes/*"],
      "@routes": ["src/routes"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@stores/*": ["src/stores/*"],
      "@stores": ["src/stores"],
      "@tests/*": ["src/tests/*"],
      "@tests": ["src/tests"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
